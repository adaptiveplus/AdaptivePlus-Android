<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.LauncherActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/envLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:text="Environment"
                android:textSize="24sp"
                android:textColor="@color/colorOnSecondary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/addEnvBtn"
                />

            <ImageView
                android:id="@+id/addEnvBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:src="@android:drawable/ic_input_add"
                app:layout_constraintTop_toTopOf="@id/envLabel"
                app:layout_constraintBottom_toBottomOf="@id/envLabel"
                app:layout_constraintEnd_toStartOf="@id/removeEnvBtn"
                />

            <ImageView
                android:id="@+id/removeEnvBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:src="@android:drawable/ic_delete"
                app:layout_constraintTop_toTopOf="@id/envLabel"
                app:layout_constraintBottom_toBottomOf="@id/envLabel"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <Spinner
                android:id="@+id/envSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_spinner"
                app:layout_constraintTop_toBottomOf="@id/envLabel"
                app:layout_constraintStart_toStartOf="@id/envLabel"
                app:layout_constraintEnd_toEndOf="@id/removeEnvBtn"
                />

            <View
                android:id="@+id/envDivider"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/envSpinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/localeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:text="Locale"
                android:textSize="24sp"
                android:textColor="@color/colorOnSecondary"
                app:layout_constraintTop_toBottomOf="@id/envDivider"
                app:layout_constraintStart_toStartOf="parent"
                />

            <Spinner
                android:id="@+id/localeSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_spinner"
                app:layout_constraintTop_toBottomOf="@id/localeLabel"
                app:layout_constraintStart_toStartOf="@id/localeLabel"
                app:layout_constraintEnd_toEndOf="@id/localeLabel"
                />

            <TextView
                android:id="@+id/locationLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center"
                android:text="Location"
                android:textSize="24sp"
                android:textColor="@color/colorOnSecondary"
                app:layout_constraintTop_toTopOf="@id/localeLabel"
                app:layout_constraintStart_toEndOf="@id/localeSpinner"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <EditText
                android:id="@+id/latitudeEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:hint="latitude"
                android:inputType="numberDecimal"
                android:digits="0123456789.-"
                app:layout_constraintTop_toBottomOf="@id/locationLabel"
                app:layout_constraintStart_toStartOf="@id/locationLabel"
                app:layout_constraintEnd_toStartOf="@id/longitudeEditText"
                app:layout_constraintHorizontal_weight="1"
                />

            <EditText
                android:id="@+id/longitudeEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:hint="longitude"
                android:inputType="numberDecimal"
                android:digits="0123456789.-"
                app:layout_constraintTop_toBottomOf="@id/locationLabel"
                app:layout_constraintStart_toEndOf="@id/latitudeEditText"
                app:layout_constraintEnd_toEndOf="@id/locationLabel"
                app:layout_constraintHorizontal_weight="1"
                />

            <EditText
                android:id="@+id/userIdEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:hint="User ID"
                app:layout_constraintTop_toBottomOf="@id/localeSpinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <Spinner
                android:id="@+id/ipSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/bg_spinner"
                app:layout_constraintTop_toBottomOf="@id/userIdEditText"
                app:layout_constraintStart_toStartOf="@id/userIdEditText"
                app:layout_constraintEnd_toStartOf="@id/addIpBtn"
                />

            <ImageView
                android:id="@+id/addIpBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:src="@android:drawable/ic_input_add"
                app:layout_constraintTop_toTopOf="@id/ipSpinner"
                app:layout_constraintBottom_toBottomOf="@id/ipSpinner"
                app:layout_constraintEnd_toStartOf="@id/removeIpBtn"
                />

            <ImageView
                android:id="@+id/removeIpBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_delete"
                app:layout_constraintTop_toTopOf="@id/ipSpinner"
                app:layout_constraintBottom_toBottomOf="@id/ipSpinner"
                app:layout_constraintEnd_toEndOf="@id/userIdEditText"
                />

            <TextView
                android:id="@+id/fcmTokenTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="FCM:"
                android:textSize="14sp"
                android:textColor="@color/colorOnSecondary"
                app:layout_constraintTop_toBottomOf="@id/ipSpinner"
                app:layout_constraintStart_toStartOf="@id/ipSpinner"
                />

            <TextView
                android:id="@+id/fcmTokenValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:hint="FCM Registration Token Value Loading"
                android:textSize="14sp"
                android:textColor="#00FF00"
                android:textIsSelectable="true"
                app:layout_constraintTop_toTopOf="@id/fcmTokenTitle"
                app:layout_constraintStart_toEndOf="@id/fcmTokenTitle"
                app:layout_constraintEnd_toEndOf="@id/removeIpBtn"
                />

            <View
                android:id="@+id/userPropsDivider"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/fcmTokenValue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/ageLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="Age"
                android:textSize="24sp"
                android:textColor="@color/colorOnSecondary"
                app:layout_constraintTop_toBottomOf="@id/userPropsDivider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/genderLabel"
                app:layout_constraintHorizontal_chainStyle="spread"
                />

            <NumberPicker
                android:id="@+id/agePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/ageLabel"
                app:layout_constraintStart_toStartOf="@id/ageLabel"
                app:layout_constraintEnd_toEndOf="@id/ageLabel"
                />

            <TextView
                android:id="@+id/genderLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="Gender"
                android:textSize="24sp"
                android:textColor="@color/colorOnSecondary"
                app:layout_constraintTop_toTopOf="@id/ageLabel"
                app:layout_constraintStart_toEndOf="@id/ageLabel"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <RadioGroup
                android:id="@+id/genderRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/genderLabel"
                app:layout_constraintStart_toStartOf="@id/genderLabel"
                app:layout_constraintEnd_toEndOf="@id/genderLabel">

                <RadioButton
                    android:id="@+id/maleRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MALE"
                    android:textSize="20sp"
                    />

                <RadioButton
                    android:id="@+id/femaleRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="FEMALE"
                    android:textSize="20sp"
                    />

            </RadioGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/startButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="8dp"
        android:text="START"
        android:textSize="24sp"
        />

</LinearLayout>