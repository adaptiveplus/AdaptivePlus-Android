<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp">

        <Button
            android:id="@+id/scrollToStartBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Scrool To Start"
            />

        <plus.adaptive.sdk.ui.AdaptivePlusView
            android:id="@+id/mock1APView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:apViewId="mock1"
            app:apHasDrafts="true"
            />

        <plus.adaptive.sdk.ui.AdaptivePlusView
            android:id="@+id/mock2APView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:apViewId="mock2"
            app:apHasDrafts="true"
            />

        <plus.adaptive.sdk.ui.AdaptivePlusView
            android:id="@+id/mock3APView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:apViewId="mock3"
            />

        <plus.adaptive.sdk.ui.AdaptivePlusView
            android:id="@+id/mock4APView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:apViewId="mock4"
            />

        <plus.adaptive.sdk.ui.AdaptivePlusView
            android:id="@+id/mock5APView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:apViewId="mock5"
            />

        <plus.adaptive.sdk.ui.AdaptivePlusView
            android:id="@+id/mock6APView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:apViewId="mock6"
            />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>