<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/apComponentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:layout_gravity="bottom|center_horizontal">

    <ImageView
        android:id="@+id/apComponentImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/appStoryComponentText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|bottom"
        android:fontFamily="sans-serif-medium"
        android:padding="2dp"
        app:layout_constraintTop_toBottomOf="@id/apComponentImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/apComponentBorderView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/apComponentImageView"
        app:layout_constraintEnd_toEndOf="@id/apComponentImageView"
        app:layout_constraintStart_toStartOf="@id/apComponentImageView"
        app:layout_constraintTop_toTopOf="@id/apComponentImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>